{
    "theme": "Monokai"
    , "caret_blink_rate": 700
    , "indent_size": 4
    , "user_tab": true 
    , "char_groups": "./\\()\"'-:,.;<>~!@#$%^&*|+=[]{}`~?" 
    , "whitespaces": "\n\t "
